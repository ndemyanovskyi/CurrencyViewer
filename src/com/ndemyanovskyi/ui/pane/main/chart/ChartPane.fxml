<Pane fx:id="root" onKeyReleased="#onKeyReleased" stylesheets="@ChartPane.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <BorderPane prefHeight="${root.height}" prefWidth="${root.width}" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
        <top>
            <HBox fx:id="datePickerPane" alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                <children>
                    <Label fx:id="fromDateLabel" minWidth="-Infinity" text="::{from}" />
                    <DatePicker fx:id="fromDatePicker" onValueChange="#onFromDatePickerValueChange" minWidth="-Infinity" />
                    <Label fx:id="toDateLabel" minWidth="-Infinity" text="::{to}" />
                    <DatePicker fx:id="toDatePicker" onValueChange="#onToDatePickerValueChange" minWidth="-Infinity" />
                </children>
                <padding>
                    <Insets bottom="10.0" />
                </padding>
            </HBox>
        </top>
        <center>
            <AnchorPane>
                <children>
                    <AreaChart fx:id="chart" animated="false" createSymbols="false" horizontalGridLinesVisible="false" legendVisible="false" minHeight="-Infinity" minWidth="-Infinity" onMouseDragged="#onChartMouseDragged" onMouseMoved="#onChartMouseMoved" onMousePressed="#onChartMousePressed" onMouseReleased="#onChartMouseReleased" onScroll="#onChartScroll" onMouseExited="#onChartMouseExited"  verticalGridLinesVisible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" BorderPane.alignment="CENTER">
                        <xAxis>
                            <DateAxis animated="false" autoRanging="false" side="BOTTOM" fx:id="xAxis" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="yAxis" animated="false" side="LEFT" />
                        </yAxis>
                    </AreaChart>
                    <Line fx:id="line" endY="100.0" mouseTransparent="true" />
                </children>
            </AnchorPane>
        </center>
        <bottom>
            <HBox fx:id="legendPane" alignment="CENTER" BorderPane.alignment="CENTER">
                <children>
                </children>
                <padding>
                    <Insets top="10.0" />
                </padding>
            </HBox>
        </bottom>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </BorderPane>
    <DescriptionPane fx:id="descriptionPane" />
</Pane>
